<Button>:
    canvas.before:
        Color:
            rgba: 0, 0, 8, 1


BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_distance
            text: '34'
            font_size: 30
#           multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                #increment input_distance += 1
                on_press: app.handle_increment(+1)
            Button:
                text: 'Down'
                #increment input_distance -= 1
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to kilometres'
        #Converts input distances from miles to kilometres
        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 30

